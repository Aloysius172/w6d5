<form action:"<%= cats_url %>" , method: "post"> 
    <label> Cat Name:
    <input type="text" name="cat[name]">
    </label>
    <br>

    <label> Cat Color:
    <select name="cat[color]">
    <option disabled selected>--Please Select One--<option>
    <option value= "brown">Brown<option>
    <option value= "black">Black<option>
    <option value= "orange">Orange<option>
    <option value= "white">White<option>
    <option value= "grey">Grey<option>
    </select>
    </label>
    <br/>

    <label>Cat Sex:
    <input type="radio" id="M" name="cat[sex]" value="M">
    <label for="M">M</label>
    <input type="radio" id="F" name="cat[sex]" value="F">
    <label for="F">F</label>
    </label>
    <br/>

    <label> Cat Birthdate:
    <input type="date" name="cat[birth_date]">
    </label>
    <br/>

    <label> Cat Description:
    <textarea name="cat[description]"></textarea>
    </label>

<input type="submit" value="Submit Cat">
</form>
